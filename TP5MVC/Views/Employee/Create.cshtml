@model TP5MVC.Models.Employee 


<div class="row"> 
    <div class="col-6 offset-3"> 
        <div class="card">
            <div class="card-header" >
                <h4="card-title">CREATE Employee</h4>
            </div>
            <div class="card-body"> 
                <form asp-action="Create" asp-controller="Employee" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Firstname"></label>
                        <input asp-for="Firstname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Lastname"></label>
                        <input asp-for="Lastname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Contact"></label>
                            <input asp-for="Contact" class="form-control" />
                        </div> 

                    </div>
                    <div class="form-group">
                        <label>Please select Image</label>
                        <input type="file"name="Image" class="form-control" />
                    </div>
                   

                    <div class="form-group">
                        <label asp-for="IsActive"></label>
                        <select asp-for="IsActive" class="form-control" />
                        <option value="true">IsActive</option>
                        <option value="false">InActive</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />

                    </div>

                </form>

            </div>
        </div>

    </div>
    
</div>